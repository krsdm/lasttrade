<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="305" Width="280">
    <Border Padding="10" Background="#F5F5F5">
        <Border BorderBrush="#CCCCCC" BorderThickness="1" 
                    Background="White" CornerRadius="5" Padding="15">
            <StackPanel>
                <TextBlock Text="Последняя сделка" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"
                               Foreground="#333333"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Цена -->
                    <TextBlock Text="Цена:" 
                                   Grid.Row="0" Grid.Column="0"
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,8"
                                   VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Price, StringFormat={}{0:F2} ₽}" 
                                   Grid.Row="0" Grid.Column="1"
                                   FontSize="14"
                                   Margin="0,0,0,8"
                                   VerticalAlignment="Center"/>

                    <!-- Количество -->
                    <TextBlock Text="Количество:" 
                                   Grid.Row="1" Grid.Column="0"
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,8"
                                   VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Volume}" 
                                   Grid.Row="1" Grid.Column="1"
                                   FontSize="14"
                                   Margin="0,0,0,8"
                                   VerticalAlignment="Center"/>

                    <!-- Направление -->
                    <TextBlock Text="Направление:" 
                                   Grid.Row="2" Grid.Column="0"
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,8"
                                   VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Direction}" 
                                   Grid.Row="2" Grid.Column="1">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Direction}" Value="LONG">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Direction}" Value="SHORT">
                                        <Setter Property="Foreground" Value="Red"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Время -->
                    <TextBlock Text="Время:" 
                                   Grid.Row="3" Grid.Column="0"
                                   FontWeight="SemiBold" 
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Time, StringFormat={}{0:HH:mm:ss}}" 
                                   Grid.Row="3" Grid.Column="1"
                                   FontSize="14"
                                   VerticalAlignment="Center"/>

                    <!-- Статус соединения -->
                    <TextBlock Text="{Binding ServerStatus}" 
                       Grid.Row="4" Grid.ColumnSpan="2"
                       FontSize="13"
                       Foreground="Green"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"
                       x:Name="_connectedStatus"/>
                </Grid>

                <!-- Кнопки Connect и Disconnect -->
                <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Margin="0,10,0,0">
                    <Button Content="Connect" 
                                Width="105"
                                Height="30"
                                Margin="0,0,10,0"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                x:Name="_connect" 
                                Click="_connect_Click"/>
                    <Button Content="Disconnect" 
                                Width="105"
                                Height="30"
                                Background="#f44336"
                                Foreground="White"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                x:Name="_disconnect" 
                                Click="_disconnect_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>
</Window>